mixin sml-img-slider(...images)
     ul.sml-img-slider__list

         each val, key in images
             li.sml-img-slider__item(class=`${key === 0 ? "front" : key === 1 ? "back" : ""}`)
                 a.sml-img-slider__card(data-fancybox=`${val[0]}` href=`/img/${val[1]}` style=`background-image: url(/img/${val[2]})`)
