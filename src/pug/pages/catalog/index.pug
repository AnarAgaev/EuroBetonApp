//- Include used template for this page
extends ../../templates/template

//- Including mixins
include ../../mixins/bread-crumbs/_bread-crumbs
include ../../mixins/page-title/_page-title
include ../../mixins/request/_requset
include ../../mixins/promo/_promo
include ../../mixins/news-list/_news-list
include ../../mixins/get-more/get-more


//- VARIABLES FOR INCLUDE THIS IN USED TEMPLATE
block variables
    - let title       = 'Каталог'
    - let description = ''
    - let keywords    = ''
    - let pageClass   = 'page-catalog'

block content
    +bread-crumbs("Главная", "Продукция", "Каталог")

    +page-title("Каталог")

    .catalog
        .container
            .row.justify-content-center
                - for (let i = 0; i < 8; i++)
                    .col-sm-6.col-lg-4.col-xl-3.catalog__item.d-flex.flex-column.justify-content-start.align-items-center
                        .prices__pic(style="background-image: url('/img/prices-pic.jpg')")
                        .prices__caption БЕТОН
                        .prices__desc М 100 В7.5 П2-П4 F50 W2
                        .prices__price
                            | от
                            span 3000
                            | руб./м
                            sup 2
                        .prices__btn
                            a(href="/").btn ПОДРОБНЕЕ

    +get-more("page-catalog", "Загрузить ещё товары")

    +request(
      '',
      'request-crane',
      'request-crane.png',
      'АРЕНДА СПЕЦТЕХНИКИ',
      'Аренда бетононасосов и кранов в Москве и Московской области',
      'подробнее'
      )



    +promo

    .container
        .all-news
            a(href="") Все новости

    +news-list(
      ['news1.jpg', '05 Сентября 2019', 'Противоморозные добавки в бетон'],
      ['news2.jpg', '30 Августа 2019', 'Цементное молочко'],
      ['news3.jpg', '02 Августа 2019', 'Бетон в дизайне',],
      ['news4.jpg', '17 Июня  2019', 'Фундаменты и их виды'])