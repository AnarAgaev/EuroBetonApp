                    a(href="/")
                        img(src="/img/director.jpg" alt="Генеральный директор - Гочелашвили Муртаз Александрович" title="Генеральный директор - Гочелашвили Муртаз Александрович")
                .company__director-link.
                    #[a.link(href="/") Генеральный директор]
